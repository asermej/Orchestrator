<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20260203063816-create-follow-up-templates-table" author="system">
        <createTable tableName="follow_up_templates">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="interview_question_id" type="uuid">
                <constraints nullable="true" foreignKeyName="fk_follow_up_templates_interview_question" references="interview_questions(id)"/>
            </column>
            <column name="interview_configuration_question_id" type="uuid">
                <constraints nullable="true" foreignKeyName="fk_follow_up_templates_interview_config_question" references="interview_configuration_questions(id)"/>
            </column>
            <column name="competency_tag" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="trigger_hints" type="text[]">
                <constraints nullable="true"/>
            </column>
            <column name="canonical_text" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="allow_paraphrase" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_approved" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <!-- Audit fields -->
            <column name="created_at" type="timestamp" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="updated_by" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="deleted_by" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="follow_up_templates" indexName="idx_follow_up_templates_interview_question_id">
            <column name="interview_question_id"/>
        </createIndex>

        <createIndex tableName="follow_up_templates" indexName="idx_follow_up_templates_is_approved">
            <column name="is_approved"/>
        </createIndex>

        <createIndex tableName="follow_up_templates" indexName="idx_follow_up_templates_is_deleted">
            <column name="is_deleted"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
