<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Add ats_api_key column to groups table so the Orchestrator can authenticate -->
    <!-- when calling back to the ATS (e.g. /api/v1/external/user-access).           -->
    <!-- The value is provided by the ATS during group sync.                          -->
    <changeSet id="20260216160000-add-ats-api-key-to-groups" author="system">
        <addColumn tableName="groups">
            <column name="ats_api_key" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
