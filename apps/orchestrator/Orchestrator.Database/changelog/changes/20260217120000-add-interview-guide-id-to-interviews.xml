<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20260217120000-add-interview-guide-id-to-interviews" author="system">
        <addColumn tableName="interviews" schemaName="public">
            <column name="interview_guide_id" type="UUID"/>
        </addColumn>
        <addForeignKeyConstraint
            baseTableName="interviews"
            baseColumnNames="interview_guide_id"
            constraintName="fk_interviews_interview_guide_id"
            referencedTableName="interview_guides"
            referencedColumnNames="id"
            onDelete="SET NULL"/>
        <createIndex tableName="interviews" indexName="idx_interviews_interview_guide_id">
            <column name="interview_guide_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="20260217120000-backfill-interview-guide-id" author="system">
        <sql>
            UPDATE interviews
            SET interview_guide_id = ic.interview_guide_id
            FROM interview_configurations ic
            WHERE interviews.interview_configuration_id = ic.id
              AND interviews.interview_guide_id IS NULL
        </sql>
    </changeSet>

</databaseChangeLog>
