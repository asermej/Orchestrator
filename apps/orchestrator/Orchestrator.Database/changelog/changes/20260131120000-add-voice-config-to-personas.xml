<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="20260131120000-add-voice-config-to-personas" author="liquibase">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="personas"/>
            <not>
                <columnExists tableName="personas" columnName="elevenlabs_voice_id"/>
            </not>
        </preConditions>
        <addColumn tableName="personas">
            <column name="elevenlabs_voice_id" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="voice_stability" type="decimal(3,2)" defaultValueNumeric="0.50">
                <constraints nullable="false"/>
            </column>
            <column name="voice_similarity_boost" type="decimal(3,2)" defaultValueNumeric="0.75">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
