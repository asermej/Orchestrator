<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20260214120002-add-root-org-to-groups" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="groups" columnName="root_organization_id"/>
            </not>
        </preConditions>
        <addColumn tableName="groups">
            <column name="root_organization_id" type="uuid">
                <constraints nullable="true"
                             foreignKeyName="fk_groups_root_organization"
                             references="organizations(id)"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
