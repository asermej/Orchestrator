<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20260215170000-add-orchestrator-api-key-to-groups" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="groups" columnName="orchestrator_api_key"/>
            </not>
        </preConditions>
        <addColumn tableName="groups">
            <column name="orchestrator_api_key" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
